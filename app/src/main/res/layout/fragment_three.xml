<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="info.androidhive.materialtabs.fragments.ThreeFragment"
    android:clickable="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/quick_call"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/main_text_quick_call"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/imageButtonMakeCall"
        android:src="@mipmap/ic_do_call"
        android:clickable="true"
        android:background="@color/material_deep_teal_500"
        android:backgroundTintMode="src_in"
        android:contentDescription="Button to call the police"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hint_quick_call"
        android:id="@+id/textView2"
        android:paddingTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/police_number"
        android:id="@+id/textView"
        android:textSize="96dp"
        android:textColor="#646464"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
